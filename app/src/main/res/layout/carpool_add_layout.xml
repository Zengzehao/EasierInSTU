<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/carpool_add_top_layout"
        android:id="@+id/include" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/starttime"
        android:hint="集合时间(任意格式)"
        android:textSize="14sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="23dp"
        android:id="@+id/startpalce"
        android:hint="出发地点"
        android:layout_below="@+id/starttime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:id="@+id/endplace"
        android:hint="目的地点"
        android:layout_below="@+id/startpalce"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/endplace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/need"
        android:hint="需要人数"
        android:textSize="14sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/need"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/contact"
        android:hint="联系方式（请在括号里注明微信号/QQ号/手机）"
        android:textSize="14sp"/>
</RelativeLayout>